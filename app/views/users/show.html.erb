<p class="h1"><%= @user.name %></p>
<h4><%= @user.name%><h4>
<br><br>
<h4><%= @user.email%></h4>



<%@user.skills.each do |skill|%>
<%if skill.user_id == @user.id %>
  <div class="card-body">
    <h5 class="card-title"><%=skill.name%></h5>
    <p class="card-text"><%=skill.price%></p>
  </div>
<%end%>
<%end%>

<div class="d-flex flex-row">
<%= link_to 'Back to users', users_path, class:"btn btn-primary" %>
<%= link_to 'Back to skills', skills_path, class:"btn btn-primary" %>
</div>